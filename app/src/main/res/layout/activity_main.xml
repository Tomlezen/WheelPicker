<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tlz.wheelpicker_test.MainActivity"
    >

  <com.tlz.wheelpicker.WheelPickerView
      android:id="@+id/wheel_picker"
      android:layout_width="match_parent"
      android:layout_height="500dp"
      app:scroll_selected_item_text_color="@color/colorPrimary"
      app:scroll_atmospheric="true"
      app:scroll_visible_item_count="12"
      app:scroll_indicator="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

</android.support.constraint.ConstraintLayout>
